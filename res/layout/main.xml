<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" android:rowCount="83" android:columnCount="24">
    <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="98dp" android:layout_row="9" android:layout_column="12">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IA vs Player"
                android:id="@+id/radioButton" android:checked="true"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player1 vs Player2"
                android:id="@+id/radioButton2"/>
    </RadioGroup>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to be Player 1?"
            android:id="@+id/switch2" android:layout_row="28" android:layout_column="12" android:checked="false"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play with : X ?"
            android:id="@+id/switch1" android:layout_row="40" android:layout_column="12" android:checked="false"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/button" android:layout_column="12" android:layout_row="82"
            android:layout_gravity="top|center"/>
</GridLayout>

